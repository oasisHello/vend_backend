<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oasis.vend.manage.mapper.OrderMapper">

    <resultMap type="Order" id="OrderResult">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="status" column="status"/>
        <result property="isAutoGenerated" column="is_auto_generated"/>
        <result property="vmInnerCode" column="vm_inner_code"/>
        <result property="userId" column="user_id"/>
        <result property="regionId" column="region_id"/>
        <result property="desc" column="`desc`"/>
        <result property="type" column="type"/>
        <result property="assignorId" column="assignor_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>
    <resultMap type="OrderCustom" id="OrderCustomResult">
        <result property="id" column="id"/>
        <result property="code" column="code"/>
        <result property="status" column="status"/>
        <result property="isAutoGenerated" column="is_auto_generated"/>
        <result property="vmInnerCode" column="vm_inner_code"/>
        <result property="userId" column="user_id"/>
        <result property="regionId" column="region_id"/>
        <result property="desc" column="`desc`"/>
        <result property="type" column="type"/>
        <result property="assignorId" column="assignor_id"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
        <association property="orderType" javaType="OrderType" column="type"
                     select="oasis.vend.manage.mapper.OrderTypeMapper.selectOrderTypeById"/>
    </resultMap>

    <sql id="selectOrderVo">
        select o.id, o.code, o.status, o.is_auto_generated, o.vm_inner_code, o.user_id, o.region_id, o.`desc`, o.type, o.assignor_id,
        o.create_time, o.update_time from `order` o
    </sql>

    <select id="selectOrderList" parameterType="Order" resultMap="OrderResult">
        <include refid="selectOrderVo"/>
        <where>
            <if test="code != null  and code != ''">and code = #{code}</if>
            <if test="status != null ">and status = #{status}</if>
        </where>
    </select>

    <select id="selectOrderById" parameterType="Long" resultMap="OrderResult">
        <include refid="selectOrderVo"/>
        where id = #{id}
    </select>

    <insert id="insertOrder" parameterType="Order" useGeneratedKeys="true" keyProperty="id">
        insert into `order`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">code,</if>
            <if test="status != null">status,</if>
            <if test="isAutoGenerated != null">is_auto_generated,</if>
            <if test="vmInnerCode != null">vm_inner_code,</if>
            <if test="userId != null">user_id,</if>
            <if test="regionId != null">region_id,</if>
            <if test="desc != null">`desc`,</if>
            <if test="type != null">type,</if>
            <if test="assignorId != null">assignor_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">#{code},</if>
            <if test="status != null">#{status},</if>
            <if test="isAutoGenerated != null">#{isAutoGenerated},</if>
            <if test="vmInnerCode != null">#{vmInnerCode},</if>
            <if test="userId != null">#{userId},</if>
            <if test="regionId != null">#{regionId},</if>
            <if test="desc != null">#{desc},</if>
            <if test="type != null">#{type},</if>
            <if test="assignorId != null">#{assignorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
        </trim>
    </insert>

    <update id="updateOrder" parameterType="Order">
        update `order`
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isAutoGenerated != null">is_auto_generated = #{isAutoGenerated},</if>
            <if test="vmInnerCode != null">vm_inner_code = #{vmInnerCode},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="regionId != null">region_id = #{regionId},</if>
            <if test="desc != null">`desc` = #{desc},</if>
            <if test="type != null">type = #{type},</if>
            <if test="assignorId != null">assignor_id = #{assignorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrderById" parameterType="Long">
        delete from `order` where id = #{id}
    </delete>

    <delete id="deleteOrderByIds" parameterType="String">
        delete from `order` where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="selectOrderCustomList" resultMap="OrderCustomResult">
        <include refid="selectOrderVo"/>
        LEFT JOIN order_type ot ON `o`.type = ot.id
        <where>
            <if test="code != null  and code != ''">and code = #{code}</if>
            <if test="status != null ">and status = #{status}</if>
            <if test="type != null">and type = #{type}</if>
            <if test="params != null and params.parentTypeId != null">and parent_type = #{params.parentTypeId}</if>
        </where>
    </select>
</mapper>