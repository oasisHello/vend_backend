<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="oasis.vend.manage.mapper.OrderMapper">
    
    <resultMap type="Order" id="OrderResult">
        <result property="id"    column="id"    />
        <result property="code"    column="code"    />
        <result property="status"    column="status"    />
        <result property="isAutoGenerated"    column="is_auto_generated"    />
        <result property="vmInnerCode"    column="vm_inner_code"    />
        <result property="userId"    column="user_id"    />
        <result property="regionId"    column="region_id"    />
        <result property="desc"    column="desc"    />
        <result property="type"    column="type"    />
        <result property="assignorId"    column="assignor_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectOrderVo">
        select id, code, status, is_auto_generated, vm_inner_code, user_id, region_id, desc, type, assignor_id, create_time, update_time from `order`
    </sql>

    <select id="selectOrderList" parameterType="Order" resultMap="OrderResult">
        <include refid="selectOrderVo"/>
        <where>  
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectOrderById" parameterType="Long" resultMap="OrderResult">
        <include refid="selectOrderVo"/>
        where id = #{id}
    </select>

    <insert id="insertOrder" parameterType="Order" useGeneratedKeys="true" keyProperty="id">
        insert into `order`
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">code,</if>
            <if test="status != null">status,</if>
            <if test="isAutoGenerated != null">is_auto_generated,</if>
            <if test="vmInnerCode != null">vm_inner_code,</if>
            <if test="userId != null">user_id,</if>
            <if test="regionId != null">region_id,</if>
            <if test="desc != null">desc,</if>
            <if test="type != null">type,</if>
            <if test="assignorId != null">assignor_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="code != null and code != ''">#{code},</if>
            <if test="status != null">#{status},</if>
            <if test="isAutoGenerated != null">#{isAutoGenerated},</if>
            <if test="vmInnerCode != null">#{vmInnerCode},</if>
            <if test="userId != null">#{userId},</if>
            <if test="regionId != null">#{regionId},</if>
            <if test="desc != null">#{desc},</if>
            <if test="type != null">#{type},</if>
            <if test="assignorId != null">#{assignorId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateOrder" parameterType="Order">
        update `order`
        <trim prefix="SET" suffixOverrides=",">
            <if test="code != null and code != ''">code = #{code},</if>
            <if test="status != null">status = #{status},</if>
            <if test="isAutoGenerated != null">is_auto_generated = #{isAutoGenerated},</if>
            <if test="vmInnerCode != null">vm_inner_code = #{vmInnerCode},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="regionId != null">region_id = #{regionId},</if>
            <if test="desc != null">desc = #{desc},</if>
            <if test="type != null">type = #{type},</if>
            <if test="assignorId != null">assignor_id = #{assignorId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteOrderById" parameterType="Long">
        delete from `order` where id = #{id}
    </delete>

    <delete id="deleteOrderByIds" parameterType="String">
        delete from `order` where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>